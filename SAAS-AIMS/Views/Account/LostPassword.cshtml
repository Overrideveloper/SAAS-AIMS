@model SAAS_AIMS.Models.LostPasswordViewModel

@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    ViewBag.Title = "Password Reset";
}

@using (Html.BeginForm("LostPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h1> Password Reset </h1>
    @Html.ValidationSummary()

    <div>
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email" })
        @Html.ValidationMessageFor(m => m.Email)
    </div>

    <div class="col-md-offset-3">
        <input type="submit" class="btn btn-default" value="Reset Password" />
    </div>

    <div class="clearfix"></div>

    <div class="separator">
        <div class="clearfix"></div>
        <br />

        <div>
            <img src="~/content/override.png" width="200" height="100" alt="Override" />
            <p>&copy; @DateTime.Now.Year Override. All Rights Reserved.</p>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}