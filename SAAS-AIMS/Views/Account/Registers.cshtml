@model SAAS_AIMS.Models.RegisterViewModel
@using SAAS_AIMS.Enums

@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    ViewBag.Title = "Register";
}

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.Hidden("UserName", "Email")
<h1>Registration Form</h1>
    @Html.ValidationSummary()
<div>
    @Html.TextBoxFor(m => m.AssociationName, new { @class = "form-control", @placeholder = "Association Name" })
    @Html.ValidationMessageFor(m => m.AssociationName)
</div>
<div>
    @Html.TextBoxFor(m => m.CollegeChapter, new { @class = "form-control", @placeholder = "University/College" })
    @Html.ValidationMessageFor(m => m.CollegeChapter)
</div>
<div>
    State: @Html.DropDownListFor(model => model.State, Enum.GetNames(typeof(State)).Select(e => new SelectListItem { Text = e, Value = ((int)Enum.Parse(typeof(State), e)).ToString()}), new { @class = "form-control required"})
    @Html.ValidationMessageFor(m => m.State)
</div><br />
<div>
    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder="Email" })
    @Html.ValidationMessageFor(m => m.Email)
</div>
<div>
    @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @placeholder="Password", @type = "password" })
    @Html.ValidationMessageFor(m => m.Password)
</div>
<div>
    @Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder="Confirm Password", @type = "password" })
    @Html.ValidationMessageFor(m => m.ConfirmPassword)
</div>
        
<div class="col-md-offset-3">
    <input type="submit" class="btn btn-default" value="Register" />
</div>

<div class="clearfix"></div>

<div class="separator">
    <p class="change_link">Already have an acccount ?
        <a href="@Url.Action("Login", "Account")" class="to_register"> Log in </a>
    </p>

    <div class="clearfix"></div>
    <br />

    <div>
        <h1><i class="fa fa-paw"></i> AIMS </h1>
        <p>&copy; @DateTime.Now.Year Override. All Rights Reserved.</p>
    </div>
</div>
}

