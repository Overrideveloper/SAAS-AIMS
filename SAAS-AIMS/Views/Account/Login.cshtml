@model SAAS_AIMS.Models.LoginViewModel

@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    ViewBag.Title = "Log in";
}

 @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h1>Login </h1>
    @Html.ValidationSummary()
     
    <div>
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email" })
        @Html.ValidationMessageFor(m => m.Email)
    </div>
    <div>
        @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @placeholder = "Password", @type = "password" })
        @Html.ValidationMessageFor(m => m.Password)
    </div>
   <div>
        <div>
            <div class="checkbox">
                @Html.CheckBoxFor(m => m.RememberMe)
                @Html.LabelFor(m => m.RememberMe)
            </div>
        </div>
    </div><br />

    <div class="col-md-offset-3">
        <input type="submit" class="btn btn-default" value="Log in" />
    </div>

    <div class="clearfix"></div>

    <div class="separator">
        <p class="change_link">
            New here?
            <a href="@Url.Action("Register", "Account")" class="to_register"> Create an account </a>
        </p>

        <div class="clearfix"></div>
        <br />

        <div>
            <h1><i class="fa fa-paw"></i> AIMS </h1>
            <p>&copy; @DateTime.Now.Year Override. All Rights Reserved.</p>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

