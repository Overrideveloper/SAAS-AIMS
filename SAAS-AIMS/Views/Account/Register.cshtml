@model SAAS_AIMS.Models.RegisterViewModel

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3 class="modal-title">Add User Account</h3>
</div>


@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="modal-body">

        <div class="form-horizontal">
            <div class="form-group">
                <label for="mail" class="control-label col-sm-3"> Email </label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(model => Model.Email, new { @class = "form-control required", @id = "title", @type="email" })
                    <div class="text-danger">
                        @Html.ValidationMessageFor(model => model.Email)
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="role" class="control-label col-sm-3"> Role </label>
                <div class="col-sm-9">
                    @Html.DropDownListFor(model => Model.RoleID, (IEnumerable<SelectListItem>)ViewBag.Role, "--- Select a role ---", new { @class = "form-control required", @id = "role"})
                    <div class="text-danger">
                        @Html.ValidationMessageFor(model => model.RoleID)
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="auth" class="control-label col-sm-3"> Password </label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(model => Model.Password, new { @class = "form-control required", @id = "auth", @type = "password" })
                    <div class="text-danger">
                        @Html.ValidationMessageFor(model => model.Password)
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="pass" class="control-label col-sm-3"> Confirm Password </label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(model => Model.ConfirmPassword, new { @class = "form-control required", @id = "pass", @type = "password" })
                    <div class="text-danger">
                        @Html.ValidationMessageFor(model => model.ConfirmPassword)
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal-footer">
        <span id="progress" class="text-center" style="display:none">
            <strong>Processing..</strong>
        </span>

        <input class="btn btn-primary btn-raised" type="submit" value="Save" />
        <button class="btn btn-danger" data-dismiss="modal"> Close </button>
    </div>
}

<script>
    $("form").removeData("validator");
    $("form").removeData("unobtrusiveValidation");
    $.validator.unobtrusive.parse("form");
</script>