@{
    ViewBag.Title = "Members";
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
}

<style>
    #form {
        width: 50%;
        margin: 0 auto;
        float: none;
    }
</style>

<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Upload Members' Data via CSV file</h3>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div>
                        <a class="btn btn-info btn-sm" href="@Url.Action("Index", "Member")"><i class="fa fa-arrow-left"></i> Return to Members' List</a><br />
                    </div>
                    <div class="x_content">
                        @using (Html.BeginForm("Upload", "Member", FormMethod.Post, new { @class = "form", enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()
                            <fieldset>
                                <div> <strong>Supported formats: CSV and XSLX </strong></div>
                                <div> <strong>Note: CSV and XSLX files' columns should be in this order: </strong></div>
                                <div class="text-muted">
                                    <ul>
                                        <li>Surname</li>
                                        <li>Middle Name</li>
                                        <li>First Name</li>
                                        <li>Matric. Number</li>
                                        <li>State of Origin</li>
                                        <li>Year of Admission</li>
                                        <li>Level at Admission</li>
                                        <li>Gender</li>
                                    </ul>
                                </div>
                            </fieldset>
                            
                                <div class="form-group">
                                    <div class="col-sm-6 col-md-offset-4">
                                        <input type="file" name="file" id="file" style="width: 100%;" />
                                    </div>
                                </div>

                                <div class="form-group">
                                    <button class="btn btn-primary btn-raised col-md-offset-5" type="submit"><i class="fa fa-upload"></i> Upload </button>
                                </div>
                        }
                            </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

