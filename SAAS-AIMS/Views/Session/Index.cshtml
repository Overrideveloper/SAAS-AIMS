@model IEnumerable<AIMS.Data.DataObjects.Entities.Session.Session>

@{
    ViewBag.Title = "Sessions";
    Layout = "~/Views/Shared/_SessionLayout.cshtml";
}

<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Academic Sessions</h3>
            </div>
        </div>

        <div class="clearfix"></div>

        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_content">

                        <div class="pull-right">
                            <a class="btn btn-info btn-sm" data-modal="" href="@Url.Action("Create", "Session")"><i class="fa fa-plus"></i> Add Academic Session</a><br />
                        </div>

                        <table id="datatable-buttons" class="grid table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Title</th>
                                    <th>Start Date</th>
                                    <th>End Date</th>
                                    <th></th>
                                </tr>
                            </thead>


                            <tbody>
                                @foreach (var session in Model)
                                {
                                    <tr>
                                        <td>@session.Title</td>
                                        <td>@session.StartDate.ToLongDateString()</td>
                                        <td>@session.EndDate.Date.ToLongDateString()</td>
                                        <td>
                                            <a class="btn btn-xs btn-default" href="@Url.Action("Edit", "Session", new { id = session.ID })"><i class="fa fa-pencil"></i>Edit</a>
                                            <a class="btn btn-xs btn-danger" href="@Url.Action("Delete", "Session")"><i class="fa fa-remove"></i>Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                        <!-- modal placeholder-->
                        <div id='myModal' class='modal fade in'>
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div id='myModalContent'></div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript" src="~/Scripts/modal.js"></script>
}