@using Microsoft.AspNet.Identity
@using AIMS.Data.DataContext.DataContext.EventDataContext
@using AIMS.Data.DataContext.DataContext.ExcoDataContext
@using AIMS.Data.DataContext.DataContext.ExpenseDataContext
@using AIMS.Data.DataContext.DataContext.IncomeDataContext
@using AIMS.Data.DataContext.DataContext.MeetingDataContext
@using AIMS.Data.DataContext.DataContext.MemoDataContext
@using AIMS.Data.DataContext.DataContext.ProjectDataContext
@{
    var sessionid = Convert.ToInt64(Session["sessionid"]);
    var _event = new EventDataContext();
    var events = _event.Event.Where(s => s.SessionID == sessionid).ToArray().Length;
    var _exco = new ExcoDataContext();
    var exco = _exco.Exco.Where(s => s.SessionID == sessionid).ToArray().Length;
    var _expense = new ExpenseDataContext();
    var expense = _expense.ExpenseCategory.Where(s => s.SessionID == sessionid).ToArray().Length;
    var _income = new IncomeDataContext();
    var income = _income.IncomeCategory.Where(s => s.SessionID == sessionid).ToArray().Length;
    var _meeting = new MeetingDataContext();
    var meeting = _meeting.Meetings.Where(s => s.SessionID == sessionid).ToArray().Length;
    var _memo = new MemoDataContext();
    var memo = _memo.Memos.Where(s => s.SessionID == sessionid).ToArray().Length;
    var _project = new ProjectDataContext();
    var project = _project.Projects.Where(s => s.SessionID == sessionid).ToArray().Length;
}
<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap -->
    <link href="~/template/vendors/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="~/template/vendors/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <!-- NProgress -->
    <link href="~/template/vendors/nprogress/nprogress.css" rel="stylesheet">
    <!-- JQuery UI -->
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <!-- DataTables -->
    <link rel="stylesheet" href="~/template/vendors/datatables.net-buttons-bs/css/buttons.bootstrap.min.css">
    <link rel="stylesheet" href="~/template/vendors/datatables.net-bs/css/dataTables.bootstrap.min.css">
    <!-- Custom Theme Style -->
    <link href="~/template/build/css/custom.min.css" rel="stylesheet">
    <!-- Blinking Icons -->
    <link href="~/Content/fa-blink.css" rel="stylesheet" />
    <!-- Morris JS -->
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/morris.js/0.5.1/morris.css">
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/raphael/2.1.0/raphael-min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/morris.js/0.5.1/morris.min.js"></script>
    <style>
        .textClass {
            font-family: Cambria;
            font-size: x-large;
            font-weight: 500;
        }
    </style>
     <title>AIMS | @ViewBag.Title</title>
</head>

<body class="nav-md">
    <div class="container body">
        <div class="main_container">
            <div class="col-md-3 left_col">
                <div class="left_col scroll-view">
                    <div class="navbar nav_title" style="border: 0;">
                        <p class="site_title text-center textClass"> AIMS </p>
                    </div>

                    <div class="clearfix"></div>

                    <!-- menu profile quick info -->
                    <div class="profile clearfix">
                        <div class="profile_info">
                            <h2>Association Name </h2>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <!-- /menu profile quick info -->

                    <hr />

                    <!-- sidebar menu -->
                    <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">
                        <div class="menu_section">
                            <ul class="nav side-menu">
                                <li>
                                    <a href="@Url.Action("Index", "Session")"><i class="fa fa-arrow-left"></i> Return to Sessions List </a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Index", "Event", new { sessionid = Convert.ToInt64(Session["sessionid"]) })"><i class="fa fa-calendar-check-o"></i> Events <span class="badge label-primary pull-right">@events</span></a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Index", "Exco", new { sessionid = Convert.ToInt64(Session["sessionid"]) })"><i class="fa fa-users"></i> Executives <span class="badge label-primary pull-right">@exco</span></a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Index", "ExpenseCategory", new { sessionid = Convert.ToInt64(Session["sessionid"]) })"><i class="fa fa-shopping-cart"></i> Expenses <span class="badge label-primary pull-right">@expense</span></a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Index", "IncomeCategory", new { sessionid = Convert.ToInt64(Session["sessionid"]) })"><i class="fa fa-briefcase"></i> Income <span class="badge label-primary pull-right">@income</span></a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Index", "Meeting", new { sessionid = Convert.ToInt64(Session["sessionid"]) })"><i class="fa fa-gavel"></i> Meetings <span class="badge label-primary pull-right">@meeting</span></a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Index", "Memo", new { sessionid = Convert.ToInt64(Session["sessionid"]) })"><i class="fa fa-list-alt"></i> Memos <span class="badge label-primary pull-right">@memo</span></a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Index", "Project", new { sessionid = Convert.ToInt64(Session["sessionid"]) })"><i class="fa fa-codepen"></i> Projects <span class="badge label-primary pull-right">@project</span></a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <!-- /sidebar menu -->
                    <!-- /menu footer buttons -->
                    @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                    {
                        <div class="sidebar-footer hidden-small">

                            @Html.AntiForgeryToken()
                            <a data-toggle="tooltip" data-placement="top" title="Manage Account" href="@Url.Action("Manage", "Account")">
                                <span class="fa fa-cog fa-spin fa-fw" aria-hidden="true"></span>
                            </a>
                            <a data-toggle="tooltip" data-placement="top" title="Logout" href="javascript:document.getElementById('logoutForm').submit()">
                                <span class="fa fa-power-off fa-blink" aria-hidden="true"></span>
                            </a>
                        </div>
                    }
                    <!-- /menu footer buttons -->
                </div>
            </div>

            <!-- top navigation -->
            <div class="top_nav">
                <div class="nav_menu">
                    <nav>
                        <div class="nav toggle">
                            <a id="menu_toggle"><i class="fa fa-bars"></i></a>
                        </div>

                        @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                        {
                            <ul class="nav navbar-nav navbar-right">
                                <li class="">
                                    <a href="javascript:;" class="user-profile dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                        <i class="fa fa-user"></i><span> </span> @User.Identity.Name
                                        <span class=" fa fa-angle-down"></span>
                                    </a>
                                    <ul class="dropdown-menu dropdown-usermenu pull-right">
                                        <li><a href="@Url.Action("Manage", "Account")"> Manage Account </a></li>
                                        <li><a href="javascript:document.getElementById('logoutForm').submit()"><i class="fa fa-sign-out pull-right"></i> Log Out</a></li>
                                    </ul>
                                </li>
                            </ul>
                        }
                    </nav>
                </div>
            </div>
            <!-- /top navigation -->
            <!-- page content -->
            @RenderBody()
            <!-- /page content -->
            <!-- footer content -->
            <footer>
                <div class="pull-right">
                    Association Information Management System by<a href="https://www.twitter.com/overrideveloper"><img src="~/content/override.png" width="100" height="60" alt="Override" /></a>
                </div>
                <div class="clearfix"></div>
            </footer>
            <!-- /footer content -->
        </div>
    </div>

    <!-- jQuery -->
    <script src="~/template/vendors/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap -->
    <script src="~/template/vendors/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/template/vendors/bootstrap-progressbar/bootstrap-progressbar.js"></script>
    <!-- JQuery UI-->
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <!-- FastClick -->
    <script src="~/template/vendors/fastclick/lib/fastclick.js"></script>
    <!-- NProgress -->
    <script src="~/template/vendors/nprogress/nprogress.js"></script>

    <!-- Datatables -->
    <script src="~/template/vendors/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/template/vendors/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
    <script src="~/template/vendors/datatables.net-buttons/js/dataTables.buttons.min.js"></script>
    <script src="~/template/vendors/datatables.net-buttons-bs/js/buttons.bootstrap.min.js"></script>
    <script src="~/template/vendors/datatables.net-buttons/js/buttons.flash.min.js"></script>
    <script src="~/template/vendors/datatables.net-buttons/js/buttons.html5.min.js"></script>
    <script src="~/template/vendors/datatables.net-buttons/js/buttons.print.min.js"></script>
    <script src="~/template/vendors/jszip/dist/jszip.min.js"></script>
    <script src="~/template/vendors/pdfmake/build/pdfmake.min.js"></script>
    <script src="~/template/vendors/pdfmake/build/vfs_fonts.js"></script>

    <!-- Bootbox -->
    <script src="~/Scripts/bootbox.min.js"></script>
    <!-- Custom Theme Scripts -->
    <script src="~/template/build/js/custom.min.js"></script>
    @RenderSection("scripts", false);
</body>
</html>
